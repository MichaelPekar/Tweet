<!DOCTYPE html>

<div id="container">
  <div id="header">
    <head>
      <title>Tweet</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
      <div class="logo">
        <table>
        <tr>
          <td><%= image_tag("Logo.png", size: "100") %></td>
          <td><strong><%= @page_title || "T-W-E-E-T" %></strong></td>
        </tr>
        </table>
      </div>

      <div id="nav">
        <% if current_user %>
            <ul>
              <li><a href="#home"><%= link_to "Home", root_path, method: :get %></a></li>
              <li><a href="#news"><%= link_to "My ralationship", followers_path, method: :get %></a></li>
              <li><a href="#contact"><%= link_to "My posts", user_path(id: current_user.id), method: :get %></a></li>
              <li><a href="#contact"><%= link_to "Users", users_path, method: :get %></a></li>
              <li style="float:right">
                <a class="active" href="#about">
                  <%= link_to "Log out", log_out_path, method: :get %>
                </a>
              </li>
            </ul>
        <% end %>
      </div>
    </head>
  </div>

  <body class="<%= controller.controller_name %>">
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <div id="main">
      <div id="main_left">
        <% if current_user != nil %>
          <div id="about_me">
            <h2>About me:</h2>
            <div id="namemail_right">
              <ul>
                <li><b>User Name: </b><%= current_user.name %></br></li>
                <li><b>Email: </b><%= current_user.email %></li>
                <div id="bupdate">
                  <%= button_to "Update profile", edit_user_path(id: current_user.id), method: :get %>
                </div>
              </ul>
            </div>

            <div id="avatar">
              <%= image_tag current_user.avatar.url(:thumb) %>
            </div>
          </div>
        <% end %>
      </div>

      <div id="main_right">
        <%= yield %>
      </div>
    </div>
  </body>
  <div id="footer">
    Â© 2016 MichaelPekar, Inc
  </div>
</div>





