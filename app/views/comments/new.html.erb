<h1>Create comment:</h1>

<%= form_for [@post, @comment] do |f| %>
    <% if @comment.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @comment.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p class="button"><%= f.submit %></p>
<% end %>



