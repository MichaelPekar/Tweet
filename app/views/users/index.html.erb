

<% @users.each do |user|%>
    <%=link_to user.name, user_path(user) %>
      <%= image_tag current_user.avatar.url(:thumb) %>
      <% if current_user.following.include?(user) %>
          <%= button_to "Unfollow", follower_path(id: user.id), method: :delete %>
      <% else %>
          <%= button_to "Follow", controller: 'followers', action: 'create', method: :post, id: user.id %>
      <% end %>
<% end %>
