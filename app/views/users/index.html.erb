<div class="card-container">
  <% @users.each do |user|%>
  <div class="card">

        <div class="profile">
          <%= image_tag user.avatar.url(:thumb) %>
          <div class="border"></div>
        </div>

        <div class="name">
          <%=link_to user.name, user_path(user) %>
        </div>

        <div id="follow">
          <% if current_user.following.include?(user) %>
              <%= button_to "Unfollow", follower_path(id: user.id), method: :delete %>
          <% else %>
              <%= button_to "Follow", controller: 'followers', action: 'create', method: :post, id: user.id %>
          <% end %>
        </div>
  </div>
  <% end %>
</div>

