<ul>
<% @users.each do |user|%>
    <li><%=link_to user.name, user_path(user) %></li>
      <% if current_user.following.include?(user) %>
          <li><%= button_to "Unfollow", follower_path(id: user.id), method: :delete %></li>
      <% else %>
          <li><%= button_to "Follow", controller: 'followers', action: 'create', method: :post, id: user.id %></li>
      <% end %>
<% end %>
</ul>